@page
@model webapp.Pages.Customers.Pages_Customers_IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Home page</h1>
<form method="post">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Customers != null)
            {
                foreach (var contact in Model.Customers)
                {
                    <tr>
                        <td>@contact.Id </td>
                        <td>@contact.Name</td>
                        <td>
                            <a asp-page="./Pages_Customers_Edit" asp-route-id="@contact.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-page="./Pages_Cutomers_Delete" asp-route-id="@contact.Id">delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-page="Pages_Customers_Create">Create New</a>
</form>